@model Web.Models.OrderViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Order</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.HiddenFor(model => model.TourId)
        </div>

        <div class="form-group">
            <p>
                Transport: @Html.CheckBoxFor(model => model.Transport)
            </p>
        </div>

        <div class="form-group">
            <p>
                Hotel: @Html.CheckBoxFor(model => model.Hotel)
            </p>
</div>

        <div class="form-group">
            @Html.LabelFor(model => model.NumberOfPerson, new { @class = "control-label col-md-2", type = "number" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumberOfPerson)
                @Html.ValidationMessageFor(model => model.NumberOfPerson)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Tour")
</div>
